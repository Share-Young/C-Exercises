#include <stdio.h>
#include <string.h>
#include <windows.h>
#include <stdlib.h>

int main()
{
	
	char arr1[] = "Welcome to Chain!!!!";
	char arr2[] = "                    ";
	int left = 0;
	int right = strlen(arr1) - 1;
	while (left <= right)
	{
		system("cls");
		arr2[left] = arr1[left];
		left++;
		arr2[right] = arr1[right];
		right--;
		printf("%s\n", arr2);
		Sleep(30);
	}
	return 0;
}
